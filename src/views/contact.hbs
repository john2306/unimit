    color: #000000;
  }

  #about .info i {
    font-size: 32px;
    color: #1de9b6;
    float: left;
  }

  #about .info p {
    padding: 0 0 10px 50px;
    line-height: 24px;
  }

  #about .form #sendmessage {
    color: #1de9b6;
    border: 1px solid #1de9b6;
    display: none;
    text-align: center;
    padding: 15px;
    font-weight: 600;
    margin-bottom: 15px;
  }

  #about .form #errormessage {
    color: red;
    display: none;
    border: 1px solid red;
    text-align: center;
    padding: 15px;
