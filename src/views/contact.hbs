<section id="about">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <h2 class="section-title">Contáctanos al equipo ChallengeX</h2>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-lg-3 col-md-4">
        <div class="info">
          <div>
            <i class="fa fa-map-marker"></i>
            <p>Sede Central<br>Lima, PERÚ</p>
          </div>

          <div>
            <i class="fa fa-envelope"></i>
            <p>jomendozag@uni.pe</p>
          </div>

          <div>
            <i class="fa fa-phone"></i>
            <p>+51 997 153 705</p>
          </div>

        </div>
      </div>

      <div class="col-lg-5 col-md-8">
        <div>
          {{> errors }}
          {{> messages }}
        </div>
        <div class="form">
          <form action="/contacts/add" method="post" role="form" class="contactForm">
            <div class="form-group">
              <input type="text" name="name" class="form-control" id="campoForm" value="{{user.name}}" placeholder="Su nombre"
                data-rule="minlen:4" data-msg="Please enter at least 4 chars" autocomplete="off" autofocus />
              <div class="validation"></div>
            </div>
            <div class="form-group">
              <input type="email" class="form-control" name="email" id="campoForm" value="{{user.email}}" placeholder="Su email"
                data-rule="email" data-msg="Please enter a valid email" autocomplete="off" />
              <div class="validation"></div>
            </div>
            <div class="form-group">
              <input type="number" class="form-control" name="phone" id="campoForm" value="{{phone}}"
                placeholder="Su teléfono celular" data-rule="email" data-msg="Please enter a valid email"
                autocomplete="off" />
              <div class="validation"></div>
            </div>
            <div class="form-group">
              <input type="text" class="form-control" name="subject" id="campoForm" value="{{subject}}"
                placeholder="Asunto" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject"
                autocomplete="off" />
              <div class="validation"></div>
            </div>
            <div class="form-group">
              <textarea id="campoForm" class="form-control" name="message" rows="5" data-rule="required"
                data-msg="Please write something for us" placeholder="Mensaje: duda o consulta"></textarea>
              <div class="validation"></div>
            </div>
            <div class="text-center"><button type="submit">Enviar Mensaje</button></div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

