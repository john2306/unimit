<div class="col-sm-12 col-md-4">
  <div class="card text-center">
    <div>
      {{> errors }}
      {{> messages }}
    </div>
    <div class="card-header">
      <h3>Nueva Nota</h3>
    </div>
    <div class="card-body">
      <form action="/notes/new-note" method="POST">
        <div class="form-group">
          <input type="text" name="title" class="form-control" placeholder="Título" autofocus autocomplete="off" />
        </div>
        <div class="form-group">
          <textarea name="description" class="form-control" placeholder="Descripciónn máximo 250 palabras" autocomplete="off" rows="8" cols="50" maxlength="200"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
